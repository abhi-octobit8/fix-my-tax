        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Appeal"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/custom_edittext_background">

            <Spinner
                android:id="@+id/sp_section"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="4dp"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appeal forms*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/custom_edittext_background">

            <Spinner
                android:id="@+id/sp_sub_section"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:spinnerMode="dialog"
                android:ellipsize="none"
                android:maxLines="10"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:singleLine="false"
                android:layout_marginEnd="4dp"
                android:layout_weight="1" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_edittext_background">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:autofillHints="name"

                android:editable="false"
                android:focusable="false"
                android:hint="Price*"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14dp"
                android:background="@drawable/custom_edittext_background"
                tools:ignore="TouchTargetSizeCheck" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="INR"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autofillHints="name"
            android:visibility="gone"
            android:background="@drawable/custom_edittext_background"
            android:hint="Phone Number* : +91XXXXXXXXXX"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14dp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Computation of income &amp; 26AS"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_pdf"
                android:text="@string/upload_document_1mb"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:src="@android:drawable/ic_lock_idle_alarm"
                />

            <TextView
                android:id="@+id/textPDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Required Documents To Be Uploaded, Kindly Click Here"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFA500"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>