<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/homrFrg"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/text_lyt"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#205AFF"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="We will manage your taxes\n you enjoy life."
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mainService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/text_lyt">




        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_lyt"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_view"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:id="@+id/one_lyt"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lyt_itr_filing"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ITR Filing"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_tds_tcs_filing"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TDS/TCS Filing"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/two_lyt"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lyt_itr_tds_tcs_notices"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ITR/TDS/TCS Notices"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gst_notice"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="GST Notice"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/three_lyt"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lyt_gst_return"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="GST Return"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_income_tax_gst_appeal"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Income Tax/GST Appeals"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/four_lyt"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lyt_business_consult"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Business Consultation"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_video_consultation_filing"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:background="#FFA500"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Video Consultation"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>






        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/subService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/text_lyt"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="#FFA500"
            android:text="Create Services"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainfilterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"

            android:background="#D3D3D3"
            android:visibility="visible" />



    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/submit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="40sp"
        android:visibility="gone"
        >



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingBTN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:color/transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Show\nTickets"
            android:gravity="center"
            android:elevation="10dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>