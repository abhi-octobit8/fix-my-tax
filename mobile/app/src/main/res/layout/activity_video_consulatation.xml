<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FilingITRActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name*"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autofillHints="name"
            android:background="@drawable/custom_edittext_background"
            android:hint="Name*"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14dp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autofillHints="name"
            android:background="@drawable/custom_edittext_background"
            android:hint="E-mail*"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14dp"
            tools:ignore="TouchTargetSizeCheck" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/custom_edittext_background">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_topic"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:autofillHints="name"
                android:gravity="left|top"
                android:hint="Topic*"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14dp"
                android:background="@drawable/custom_edittext_background"
                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubSection Type*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!--  <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:background="@drawable/custom_edittext_background">

              <Spinner
                  android:id="@+id/sp_sub_section"
                  android:layout_width="match_parent"
                  android:layout_height="45dp"
                  android:layout_marginEnd="4dp"
                  android:layout_weight="1"
                  tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
          </RelativeLayout>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_edittext_background">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:autofillHints="name"
                android:editable="false"
                android:focusable="false"
                android:hint="5100"
                android:textColor="@android:color/holo_green_light"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14dp"
                android:background="@drawable/custom_edittext_background"
                tools:ignore="TouchTargetSizeCheck" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="INR"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/edit_text_dateLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_edittext_background">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:autofillHints="name"
                android:editable="false"
                android:focusable="false"
                android:hint="Select Date"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14dp"
                android:background="@drawable/custom_edittext_background"
                tools:ignore="TouchTargetSizeCheck" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_tex"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note* Saturday and Sunday slot not available"
            android:layout_marginTop="0dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Available Slot*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/custom_edittext_background">

            <Spinner
                android:id="@+id/sp_section"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="4dp"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number*"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autofillHints="name"
            android:visibility="gone"
            android:background="@drawable/custom_edittext_background"
            android:hint="Phone Number* : +91XXXXXXXXXX"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14dp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Document"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_camera"
                android:text="Click to upload"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="@color/black"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFA500"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>